#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager/.envrc" "/Users/kenneth/Documents/School_GitHub/honors-portfolio/artifact-meta-manager/.direnv"/*.rc
